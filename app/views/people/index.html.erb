<%= render 'shared/index_temp_1' %>
<p id="notice"><%= notice %></p>

<h1>Listing People</h1>
<%= render 'shared/index_temp_2' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Person type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.person_type %></td>
        <td><%= person.description %></td>
        <td><%= link_to 'Show', person, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_person_path(person), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render 'shared/index_temp_3' %>

<%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>
