<p id="notice"><%= notice %></p>

<h1>Listing Straight Beans</h1>
<%= render 'shared/index_temp_2' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Bean</th>
      <th>Loast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @straight_beans.each do |straight_bean| %>
      <tr>
        <td><%= straight_bean.bean_id %></td>
        <td><%= straight_bean.loast %></td>
        <td><%= link_to 'Show', straight_bean, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_straight_bean_path(straight_bean), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', straight_bean, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
