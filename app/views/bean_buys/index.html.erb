<p id="notice"><%= notice %></p>

<h1>Listing Bean Buys</h1>
<%= render 'shared/index_temp_2' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Arrival</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bean_buys.each do |bean_buy| %>
      <tr>
        <td><%= bean_buy.arrival_id %></td>
        <td><%= bean_buy.cost %></td>
        <td><%= link_to 'Show', bean_buy, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_bean_buy_path(bean_buy), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', bean_buy, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
