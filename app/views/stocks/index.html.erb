<%= render 'shared/index_temp_1'%>

<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>
<%= render 'shared/index_temp_2'%>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Arrival</th>
      <th>Stockholder</th>
      <th>Cost</th>
      <th>Dividend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.arrival_id %></td>
        <td><%= stock.stockholder_id %></td>
        <td><%= stock.cost %></td>
        <td><%= stock.dividend %></td>
        <td><%= link_to 'Show', stock, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render 'shared/index_temp_3'%>

<%= link_to 'New Stock', new_stock_path, class: 'btn btn-primary' %>
