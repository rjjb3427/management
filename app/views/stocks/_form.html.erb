<%= form_for(@stock, html: {class: "new_stock form-horizontal"}) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
      <% @stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :arrival_id %><br>
    <%= f.number_field :arrival_id, value: @arrival_id, readonly: false, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :stockholder_id %><br>
    <%= f.collection_select :stockholder_id, @person_list, :id, :name, {include_blank: '選択してください'}, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :cost %><br>
    <%= f.number_field :cost, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :dividend %><br>
    <%= f.number_field :dividend, class: "form-control" %>
  </div>
  <div class="actions form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
