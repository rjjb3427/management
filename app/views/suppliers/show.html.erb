<%= render 'shared/header_start' %>
<p id="notice"><%= notice %></p>
<%= render 'shared/header_end' %>

<%= render 'shared/rowset_start' %>
  <legend><%= @supplier.name %></legend>
  <p>
    <strong>Location:</strong>
    <%= @supplier.location %>
  </p>
<%= render 'shared/rowset_end'%>

<%= render 'shared/rowset_start' %>
  <legend>Supply Beans</legend>
  <%= render partial: 'supply_beans', locals: { supply_beans: @supplier.beans } %>
  <%= link_to 'New Bean', new_bean_path, class: "btn btn-danger"%>
<%= render 'shared/rowset_end' %>

<%= render 'shared/footer_start'%>
  <%= link_to 'New Supplier', new_supplier_path, class: "btn btn-primary" %> |
  <%= link_to 'Edit', edit_supplier_path(@supplier), class: "btn btn-warning" %> |
  <%= link_to 'Back', suppliers_path, class: "btn btn-default" %>
<%= render 'shared/footer_end' %>
