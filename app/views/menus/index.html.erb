<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>

<table>
  <thead>
    <tr>
      <!--<th>Arrival</th>-->
      <th>Bean name</th>
      <th>Supplier name</th>
      <th>Price</th>
      <th>Temperature</th>
      <th>Variety</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <!--<td><%= menu.arrival_id %></td>-->
        <td><%= menu.arrival.bean[:name]%></td>
        <td><%= menu.arrival.bean.supplier[:name]%></td>
        <td><%= menu.price %></td>
        <td><%= menu.temperature %></td>
        <td><%= menu.variety %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

