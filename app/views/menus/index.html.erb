<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>
<%= render 'shared/index_temp_2' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <!--<th>Arrival</th>-->
      <th>Bean</th>
      <th>Supplier</th>
      <th>Price</th>
      <th>Temperature</th>
      <th>Variety</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <!--<td><%= menu.arrival_id %></td>-->
        <td><%= menu.arrival.bean[:name]%></td>
        <td><%= menu.arrival.bean.supplier[:name]%></td>
        <td><%= menu.price %></td>
        <td><%= menu.temperature %></td>
        <td><%= menu.variety %></td>
        <td><%= link_to 'Show', menu, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
