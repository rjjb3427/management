<%= render 'shared/index_temp_1' %>
<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>
<%= render 'shared/index_temp_2' %>      		
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <!--<th>Menu</th>-->
      <!--<th>Person</th>-->
      <th>Variety</th>
      <th>Temperature</th>
      <th>Bean</th>
      <th>Supplier</th>
      <th>Time</th>
      <th>Price type</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <!--<td><%= order.menu_id %></td>-->
        <!--<td><%= order.person_id %></td>-->
        <td><%= order.menu.variety %></td>
        <td><%= order.menu.temperature %></td>
        <td><%= order.menu.arrival.bean.name %></td>
        <td><%= order.menu.arrival.bean.supplier.name %></td>
        <td><%= order.time %></td>
        <td><%= order.price_type %></td>
        <td><%= order.price %></td>
        <td><%= link_to 'Show', order, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
