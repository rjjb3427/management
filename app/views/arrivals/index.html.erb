<%= render 'shared/index_temp_1' %>
<p id="notice"><%= notice %></p>

<h1>Listing Arrivals</h1>
<%= render 'shared/index_temp_2' %>      		
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <!--<th>Bean</th>-->
      <th>Bean</th>
      <th>Supplier</th>
      <th>Arrival type</th>
      <th>Amount</th>
      <th>Arrival date</th>
      <th>Soldout</th>
      <th>Soldout date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arrivals.each do |arrival| %>
      <tr>
        <!--<td><%= arrival.bean_id %></td>-->
        <td><%= arrival.bean.name %></td>
        <td><%= arrival.bean.supplier.name %></td>
        <td><%= if arrival.arrival_type=='stock' then '株豆' elsif arrival.arrival_type=='bean_buy' then '購入豆' end %></td>
        <td><%= arrival.amount %>g</td>
        <td><%= arrival.arrival_date %></td>
        <td><%= arrival.soldout %></td>
        <td><%= arrival.soldout_date %></td>
        <td><%= link_to 'Show', arrival, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_arrival_path(arrival), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', arrival, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
