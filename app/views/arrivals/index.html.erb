<p id="notice"><%= notice %></p>

<h1>Listing Arrivals</h1>

<table>
  <thead>
    <tr>
      <th>Bean</th>
      <th>Arrival type</th>
      <th>Date</th>
      <th>Soldout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arrivals.each do |arrival| %>
      <tr>
        <td><%= arrival.bean_id %></td>
        <td><%= arrival.arrival_type %></td>
        <td><%= arrival.date %></td>
        <td><%= arrival.soldout %></td>
        <td><%= link_to 'Show', arrival %></td>
        <td><%= link_to 'Edit', edit_arrival_path(arrival) %></td>
        <td><%= link_to 'Destroy', arrival, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

